<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pet_activity_background"
        android:src="@drawable/home_background"/>

    <RelativeLayout
        android:id="@+id/pet_name_outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/pet_frame">
        <TextView
            android:id="@+id/pet_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/montserrat_light"
            android:textSize="35sp"
            android:textColor="@color/dark_grey"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/pet_pet_image"
        android:layout_width="@dimen/pet_activity_pet_width"
        android:layout_height="@dimen/pet_activity_pet_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".4"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet_feed_button_outer"
        android:layout_width="@dimen/home_button_outer_size"
        android:layout_height="@dimen/home_button_outer_size"
        android:elevation="@dimen/home_button_elevation"
        android:background="@color/white"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/home_button_outer_corner_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".75"
        app:layout_constraintHorizontal_bias=".25">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_base"
            android:src="@drawable/food_bowl_shape"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet_bathe_button_outer"
        android:layout_width="@dimen/home_button_outer_size"
        android:layout_height="@dimen/home_button_outer_size"
        android:elevation="@dimen/home_button_elevation"
        android:background="@color/white"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/home_button_outer_corner_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".75">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_base"
            android:src="@drawable/bath_shape"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet_color_button_outer"
        android:layout_width="@dimen/home_button_outer_size"
        android:layout_height="@dimen/home_button_outer_size"
        android:elevation="@dimen/home_button_elevation"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/home_button_outer_corner_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".75"
        app:layout_constraintHorizontal_bias=".75">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_base"
            android:src="@drawable/home_shape"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet_home_button_outer"
        android:layout_width="@dimen/home_button_outer_size"
        android:layout_height="@dimen/home_button_outer_size"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        android:elevation="@dimen/home_button_elevation"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/home_button_outer_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/pet_home_button_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_base"
            android:src="@drawable/home_shape"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pet_trust_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_light"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pet_mood_text" />

    <TextView
        android:id="@+id/pet_mood_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_light"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pet_pet_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>